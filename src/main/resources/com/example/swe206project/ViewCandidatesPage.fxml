<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.swe206project.Controller">
   <children>
      <BorderPane prefHeight="600.0" prefWidth="800.0">
         <left>
            <VBox prefHeight="479.0" prefWidth="214.0" BorderPane.alignment="CENTER">
               <children>
                  <Button alignment="CENTER" mnemonicParsing="false" onAction="#onBackClick" prefHeight="63.0" prefWidth="233.0" text="Back" textAlignment="CENTER" wrapText="true" />
                  <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="49.0" prefWidth="214.0" text="Candidates" textAlignment="CENTER">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <ListView fx:id="candidatesList" onMouseClicked="#onCandidateListClick" prefHeight="431.0" prefWidth="247.0" />
               </children>
            </VBox>
         </left>
         <bottom>
            <HBox prefHeight="138.0" prefWidth="1145.0" spacing="20.0" BorderPane.alignment="CENTER">
               <children>
                  <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onClickAddCandidate" prefHeight="99.0" prefWidth="147.0" text="Add a new candidate" textAlignment="CENTER" wrapText="true" />
                  <Pane prefHeight="118.0" prefWidth="642.0" />
                  <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onCreateInterviewClick" prefHeight="100.0" prefWidth="140.0" text="Create Interview" textAlignment="CENTER" wrapText="true">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
               <padding>
                  <Insets left="20.0" right="20.0" top="20.0" />
               </padding>
            </HBox>
         </bottom>
         <center>
            <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <bottom>
                  <HBox prefHeight="128.0" prefWidth="931.0" spacing="20.0" BorderPane.alignment="CENTER">
                     <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="125.0" prefWidth="150.0" text="Interviewes:" textAlignment="CENTER">
                           <font>
                              <Font size="25.0" />
                           </font>
                        </Label>
                        <Label fx:id="interview" alignment="CENTER" prefHeight="130.0" prefWidth="133.0" text="Interview 1" textAlignment="CENTER" textFill="#eb0909" underline="true">
                           <font>
                              <Font size="23.0" />
                           </font>
                        </Label>
                        <Label alignment="CENTER" prefHeight="130.0" prefWidth="133.0" text="Interview 2" textAlignment="CENTER" textFill="#eb0909" underline="true">
                           <font>
                              <Font size="23.0" />
                           </font>
                        </Label>
                        <Label alignment="CENTER" prefHeight="130.0" prefWidth="133.0" text="Interview 3" textAlignment="CENTER" textFill="#eb0909" underline="true">
                           <font>
                              <Font size="23.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </bottom>
               <left>
                  <HBox alignment="CENTER" prefHeight="259.0" prefWidth="795.0" spacing="20.0" BorderPane.alignment="CENTER">
                     <children>
                        <Label prefHeight="228.0" prefWidth="210.0" text="Personal info: ">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <GridPane prefHeight="228.0" prefWidth="513.0">
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                          </rowConstraints>
                           <children>
                              <Label text="Name">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="nameTextField" alignment="CENTER" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" prefHeight="33.0" prefWidth="258.0" promptText="eg. Ahmed Alahmed" GridPane.columnIndex="1" />
                              <TextField fx:id="idTextField" alignment="CENTER" prefHeight="33.0" prefWidth="156.0" promptText="ID must contain 10 numbers" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              <Label text="ID" GridPane.rowIndex="1">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <Label text="Education level" GridPane.rowIndex="2">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="eduTextField" alignment="CENTER" maxWidth="1.7976931348623157E308" prefHeight="33.0" prefWidth="258.0" promptText="B: Bachelor" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                              <Label text="Years of experience" GridPane.rowIndex="3">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="experienceTextField" alignment="CENTER" maxWidth="1.7976931348623157E308" prefHeight="33.0" prefWidth="258.0" promptText="eg. 1,10" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                              <Label text="Gender" GridPane.rowIndex="4">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <HBox alignment="CENTER" prefHeight="33.0" prefWidth="200.0" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
                                 <children>
                                    <RadioButton fx:id="maleRadio" mnemonicParsing="false" text="Male">
                                       <toggleGroup>
                                          <ToggleGroup fx:id="gender" />
                                       </toggleGroup>
                                    </RadioButton>
                                    <RadioButton fx:id="femaleRadio" mnemonicParsing="false" text="Female" toggleGroup="$gender" />
                                 </children>
                              </HBox>
                           </children>
                        </GridPane>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
               </left>
            </BorderPane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
