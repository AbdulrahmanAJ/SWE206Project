<AnchorPane prefHeight="353.0" prefWidth="369.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.swe206project.controllers.candidates.NewCandidateModalController">
    <children>
        <Button layoutX="156.0" layoutY="285.0" mnemonicParsing="false" onAction="#onAddClick" prefHeight="31.0" prefWidth="58.0" text="Add ">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
        <GridPane alignment="CENTER" layoutX="47.0" layoutY="63.0" prefHeight="226.0" prefWidth="280.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="136.0" minWidth="10.0" prefWidth="125.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="180.0" minWidth="10.0" prefWidth="155.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="46.0" minHeight="10.0" prefHeight="46.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="48.0" minHeight="10.0" prefHeight="46.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="48.0" minHeight="10.0" prefHeight="44.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="42.0" minHeight="10.0" prefHeight="36.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="34.0" minHeight="10.0" prefHeight="34.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="27.0" minHeight="10.0" prefHeight="20.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="18.0" prefWidth="102.0" text="Name:" textAlignment="CENTER" />
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="18.0" prefWidth="102.0" text="National ID:" textAlignment="CENTER" GridPane.rowIndex="1" />
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="18.0" prefWidth="102.0" text="Gender:" textAlignment="CENTER" GridPane.rowIndex="2" />
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="18.0" prefWidth="112.0" text="Years of experience:" textAlignment="CENTER" GridPane.rowIndex="4" />
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="18.0" prefWidth="102.0" text="Education Level:" textAlignment="CENTER" GridPane.rowIndex="3" />
                <TextField fx:id="nameTextField" prefHeight="26.0" prefWidth="160.0" promptText="e.g Abdulrahman" GridPane.columnIndex="1" />
                <TextField fx:id="idTextField" promptText="e.g., 1111231123" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextField fx:id="experienceTextField" prefHeight="26.0" prefWidth="66.0" promptText="e.g., 5" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <TextField fx:id="educationTextField" promptText="e.g., Bachelor" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <VBox prefHeight="39.0" prefWidth="149.0" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <children>
                        <RadioButton fx:id="maleRadio" mnemonicParsing="false" text="Male">
                            <toggleGroup>
                                <ToggleGroup fx:id="gender" />
                            </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="femaleRadio" mnemonicParsing="false" text="Female" toggleGroup="$gender" />
                    </children>
                </VBox>
            </children>
        </GridPane>
        <Label alignment="CENTER" layoutX="112.0" layoutY="14.0" prefHeight="18.0" prefWidth="146.0" text="New Candidate" textAlignment="CENTER">
            <font>
                <Font size="21.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
